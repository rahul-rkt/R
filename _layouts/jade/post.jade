!="---\n"
!="layout: default\n"
!="comments: true\n"
!="---\n\n"


div.post
    span.post-date
        !="{{ page.date | date_to_string }}"

    h1.post-title
        !="{{ page.title }}"

    !="{{ content }}"


div.related-posts
    h4.related-posts-title Related Posts

    ul.related-posts-items
        !="{% for post in site.related_posts limit:3 %}"
            li.related-posts-item
                span.related-posts-item-date
                    !="{{ post.date | date_to_string }}"

                span.related-posts-item-url
                    a(href!="{{ post.url }}")
                        !="{{ post.title }}"
        !="{% endfor %}"
