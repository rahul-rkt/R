head
    //- General ---------------------------------------------------------------
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="language", content="English")
    meta(
        name="author"
        content!="{{ site.author.name }}"
    )
    meta(
        name="description"
        content!="{% if page.description %}{{ page.description }}{% else %}{{ site.description }}{% endif %}"
    )
    meta(
        name="copyright"
        content!="{{ site.author.name }}"
    )
    //- only include if site is live __________________________________________
    !="{% if site.isLive %}"
        //- SEO Optimizations -----------------------------------------------------
        meta(name="robots", content="index, follow")
        meta(name="revisit-after", content="1 day")
        meta(
            name="keywords"
            content!="{% for keyword in site.author.keywords %}{{ keyword }}, {% endfor %}{{ site.author.name }}"
        )
        //- Google
        meta(
            name="google-site-verification"
            content!="{{ site.google_verification }}"
        )
        link(
            rel="author"
            href!="https://plus.google.com/{{ site.author.googleplus }}"
        )
        meta(
            itemprop="name"
            content!="{% if page.title %}{{ page.title }}{% else %}{{ site.title }}{% endif %}"
        )
        meta(
            itemprop="description"
            content!="{% if page.description %}{{ page.description }}{% else %}{{ site.description }}{% endif %}"
        )
        meta(
            itemprop="image"
            content!="{{ site.logo }}"
        )
        meta(name="google", content="notranslate")
        meta(name="google", content="nositelinkssearchbox")
        meta(name="googlebot", content="noodp")
        //- Twitter Cards
        meta(name="twitter:card", content="summary")
        meta(
            name="twitter:title"
            content!="{% if page.title %}{{ page.title }}{% else %}{{ site.title }}{% endif %}"
        )
        meta(
            name="twitter:description"
            content!="{% if page.description %}{{ page.description }}{% else %}{{ site.description }}{% endif %}"
        )
        meta(
            name="twitter:creator"
            content!="@{{ site.author.twitter }}"
        )
        meta(
            name="twitter:url"
            content!="{{ site.url }}{{ page.url }}"
        )
        meta(
            name="twitter:image"
            content!="{{ site.logo }}"
        )
        //- Facebook Open Graph
        meta(property="og:locale", content="en_IN")
        meta(property="og:locale:alternate", content="en_GB")
        meta(property="og:locale:alternate", content="en_US")
        meta(property="og:locale:alternate", content="en_HK")
        meta(property="og:locale:alternate", content="en_DE")
        meta(property="og:type", content="article")
        meta(
            property="og:title"
            content!="{% if page.title %}{{ page.title }}{% else %}{{ site.title }}{% endif %}"
        )
        meta(
            property="og:description"
            content!="{% if page.description %}{{ page.description }}{% else %}{{ site.description }}{% endif %}"
        )
        meta(
            property="og:url"
            content!="{{ site.url }}{{ page.url }}"
        )
        meta(
            property="og:site_name"
            content!="{{ site.title }}"
        )
        meta(
            property="og:image"
            content!="{{ site.logo }}"
        )
        //- Bing
        meta(
            name="msvalidate.01"
            content!="{{ site.bing_verification }}"
        )
    !="{% endif %}"
    //- _______________________________________________________________________
    //- Enable responsiveness on mobile devices -------------------------------
    meta(name="HandheldFriendly", content="True")
    meta(name="MobileOptimized", content="320")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    //- Title -----------------------------------------------------------------
    title!="{% if page.title == Home %}{{ site.title }} &middot; {{ site.tagline }}{% else %}{{ page.title }} &middot; {{ site.title }}{% endif %}"
    //- CSS -------------------------------------------------------------------
    //- Font-Awesome
    !="{% if page.fa %}"
        link(rel="stylesheet", href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css")
    !="{% endif %}"
    //- Inline all scss
    style(type="text/css")
        !="{% capture include_to_scssify %}{% include style.scss %}{% endcapture %}{{ include_to_scssify | scssify }}"
    //- Icons -----------------------------------------------------------------
    //- 16x16
    link(rel="shortcut icon", href="/assets/img/favicon.ico")
    //- 32x32
    link(rel="shortcut icon", href="/assets/img/favicon.png")
    //- 57x57 >> iPhone 3GS, pre-2011 iPod Touch and older Android devices
    link(rel="apple-touch-icon-precomposed", href="/assets/img/apple-touch-icon-precomposed.png")
    //- 72x72 >> 1st gen iPad, iPad 2 and iPad mini
    link(rel="apple-touch-icon-precomposed", sizes="72x72", href="/assets/img/apple-touch-icon-72x72-precomposed.png")
    //- 114x114 >> iPhone 4, 4S, 5 and post-2011 iPod Touch
    link(rel="apple-touch-icon-precomposed", sizes="114x114", href="/assets/img/apple-touch-icon-114x114-precomposed.png")
    //- 144x144 >> iPad 3rd and 4th gen
    link(rel="apple-touch-icon-precomposed", sizes="144x144", href="/assets/img/apple-touch-icon-144x144-precomposed.png")
    //- RSS -------------------------------------------------------------------
    !="{% capture canonical %}{{ site.url }}{% if site.permalink contains '.html' %}{{ page.url }}{% else %}{{ page.url | remove:'index.html' | strip_slash }}{% endif %}{% endcapture %}"
    link(
        rel="canonical"
        href!="{{ canonical }}"
    )
    link(
        href!="{{ site.url }}/feed.xml"
        type="application/rss+xml"
        rel="alternate"
        title!="{{ site.title }} Feed"
    )
